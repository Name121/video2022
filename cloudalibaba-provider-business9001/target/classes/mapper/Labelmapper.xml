<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ZhangYM.springcloud.label.mapper.LabelMapper">

    <select id="listLabel" resultType="com.ZhangYM.entities.Label" parameterType="com.ZhangYM.entities.Label">
        SELECT * FROM label
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="labelCode != null">
                AND labelCode = #{labelCode}
            </if>
            <if test="labelName != null">
                AND labelName = #{labelName}
            </if>
            <if test="createDate != null">
                AND createDate = #{createDate}
            </if>
            <if test="updateDate != null">
                AND updateDate = #{updateDate}
            </if>
            <if test="remark != null">
                AND remark = #{remark}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>

    <insert id="insertLabel" parameterType="com.ZhangYM.entities.Label" useGeneratedKeys="true" keyProperty="id">
        insert into label
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="labelCode != null">
                labelCode,
            </if>
            <if test="labelName != null">
                labelName,
            </if>
            <if test="createDate != null">
                createDate,
            </if>
            <if test="updateDate != null">
                updateDate,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="status != null">
                status,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="labelCode != null">
                #{labelCode},
            </if>
            <if test="labelName != null">
                #{labelName},
            </if>
            <if test="createDate != null">
                #{createDate},
            </if>
            <if test="updateDate != null">
                #{updateDate},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
            <if test="status != null">
                #{status},
            </if>
        </trim>
    </insert>

</mapper>